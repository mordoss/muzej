---
import Layout from '../layouts/Layout.astro'
import { contacts } from '../utils/constants'
import ContactForm from '../components/ContactForm'
---

<Layout title="Zahtev za grupnu posetu">
  <div class="container">
    <img src="laptop.jpeg" alt="laptop" class="left-image" />
    <div class="left-column">
      <h1>Kontakt</h1><p>Imate neko pitanje za nas? Pi≈°ite nam.</p>
      <ContactForm client:load/>
      <div class="contacts">
        {
          contacts.emails.map((contact) => (
            <div class="contact">
              <img src="letter.svg" alt="pismo" />
              <p>{contact}</p>
            </div>
          ))
        }
        <br />
        {
          contacts.emails.map((contact) => (
            <div class="contact">
              <img src="phone.svg" alt="telefon" />
              <p>{contact}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
<style>
  .container {
    display: flex;
    gap: 8rem;
  }
  h1 {
    margin-bottom: 2.25rem;
  }
  .left-image {
    margin-left: calc(-1 * var(--main-horizontal-padding));
    margin-top: calc(-1 * var(--main-vertical-padding));
    margin-bottom: calc(-1 * var(--main-vertical-padding));
  }
  .left-column {
    flex: 1;
  }
  
  .contacts {
    margin-top: 6.5rem;
  }
  .contact {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    align-items: center;
  }
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 3rem;
    }
    .left-image {
      margin: 0 -3rem 0 -3rem;
      height: 10rem;
      object-fit: cover;
    }
    .contacts {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }
    .name-email {
      margin-top: 1.5rem;
      flex-direction: column;
    }
  }
</style>
