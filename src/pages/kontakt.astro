---
import Layout from '../layouts/Layout.astro'
import Input from '../components/Input.astro'
import Button from '../components/Button.astro'

import { contacts } from '../utils/constants'
---

<Layout title="Zahtev za grupnu posetu">
  <div class="container">
    <img src="laptop.jpeg" alt="laptop" class="left-image" />
    <div class="left-column">
      <h1>Kontakt</h1><p>Imate neko pitanje za nas? Pišite nam.</p>
      <div class="name-email">
        <div>
          <Input placeholder="Vaše ime" type="text" />
        </div>
        <div>
          <Input placeholder="Vaša e-mail adresa" type="email" />
        </div>
      </div>
      <Input placeholder="Vaša poruka" type="textarea" />
      <div class="social">
        <Button text="Pošaljite poruku" semiwide />
        <a href=""><img src="fb.svg" alt="" /></a>
        <a href=""><img src="ig.svg" alt="" /></a>
      </div>
      <div class="contacts">
        {
          contacts.emails.map((contact) => (
            <div class="contact">
              <img src="letter.svg" alt="pismo" />
              <p>{contact}</p>
            </div>
          ))
        }
        <br />
        {
          contacts.emails.map((contact) => (
            <div class="contact">
              <img src="phone.svg" alt="telefon" />
              <p>{contact}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
<style>
  .container {
    display: flex;
    gap: 8rem;
  }
  h1 {
    margin-bottom: 2.25rem;
  }
  .left-image {
    margin-left: calc(-1 * var(--main-horizontal-padding));
    margin-top: calc(-1 * var(--main-vertical-padding));
    margin-bottom: calc(-1 * var(--main-vertical-padding));
  }
  .left-column {
    flex: 1;
  }
  .name-email {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: space-between;
    gap: 1.5rem;
  }
  .name-email * {
    flex: 1;
  }
  .social {
    margin-top: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .contacts {
    margin-top: 6.5rem;
  }
  .contact {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    align-items: center;
  }
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      gap: 3rem;
    }
    .left-image {
      margin: 0 -3rem 0 -3rem;
      height: 10rem;
      object-fit: cover;
    }
    .contacts {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }
    .name-email {
      margin-top: 1.5rem;
      flex-direction: column;
    }
  }
</style>
