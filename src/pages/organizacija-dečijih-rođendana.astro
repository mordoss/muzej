<Layout title="Organizacija dečijih rođendana">
  <div class="container">
    <div class="hero">
      <h1 class="text-center text-white">
        Dečiji rođendani u Prirodnjačkom centru
      </h1>
      <p class="text-white text-center">
        {p}
      </p>
      <a href="/ivana">
        <Button text="Kontaktirajte nas" />
      </a>
    </div>
    <h3 class="text-center">Organizacija dečijeg rođendana</h3>
    <div class="grid grid-2">
      {
        ageOptions.map((age) => (
          <ReactCard heading={age.age} options={age.options} client:load/>
        ))
      }
    </div>
    <h3 class="text-center">Ponuda grupnih obroka</h3>
    <div class="grid grid-3">
      {
        groupMeals.map((meal) => (
          <Card
            backgroundColor={colors.light}
            heading={meal.meal}
            options={meal.options}
            height="20rem"
            shadow
            light
            price={meal.price}
          />
        ))
      }
    </div>
    <Card
      backgroundColor={colors.light}
      heading="Piće za odrasle"
      options={[
        "Coca-cola, Fanta, Bitter Lemon, Sprite, i Ice Tea - 200,00 din",
